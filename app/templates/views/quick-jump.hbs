<div>
  <div class="bar">
    <i></i>

    {{input
      type="text"
      placeholder="Jump to advisors, client, projects and more..."
      value=query
    }}

    {{#top-level}}
      {{#liquid-if view.isActive use="crossFade" class="quick-jump-results"}}
        <div>
          <div class="overlay"></div>

          <div class="content">
            <section>
              <h1>Colleagues</h1>

              <ul>
                <li><article>Imba colleague 1</article></li>
                <li><article>Imba colleague 2</article></li>
              </ul>
            </section>

            <section>
              <h1>Advisors</h1>

              <ul>
                <li><article>Pro advisor 1</article></li>
                <li><article>Pro advisor 2</article></li>
              </ul>
            </section>
          </div>
        </div>
      {{/liquid-if}}
    {{/top-level}}
  </div>

  <div class="actions">
    {{#liquid-unless view.isActive}}
      <button class="change-app" title="Change App" data-dropdown="apps"></button>

      {{#top-level}}
        <ul id="add" class="add" data-dropdown-content>
          <li><a href="#">New advisor</a></li>
          <li><a href="#">New project</a></li>
        </ul>
      {{/top-level}}

      <button class="add" title="Add" data-dropdown="add"></button>

      {{#top-level}}
        <ul id="apps" class="apps" data-dropdown-content>
          <li><a href="#">Metrics</a></li>
          <li><a href="#">Finance</a></li>
          <li><a href="#">Clients</a></li>
        </ul>
      {{/top-level}}
    {{/liquid-unless}}
  </div>
</div>
