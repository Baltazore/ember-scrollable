<div>
  <div class="bar">
    <i></i>

    {{input
      type="text"
      placeholder="Jump to advisors, client, projects and more..."
      value=query
    }}
  </div>

    {{#liquid-unless view.isActive class="liquid-actions"}}
      <div class="actions">
        <button class="change-app" title="Change App" data-dropdown="apps"></button>

        <ul id="addable" class="addable" data-dropdown-content>
          <li><a href="#">New advisor</a></li>
          <li><a href="#">New project</a></li>
        </ul>

        <button class="add" title="Add" data-dropdown="addable"></button>

        <ul id="apps" class="apps" data-dropdown-content>
          <li><a href="#">Metrics</a></li>
          <li><a href="#">Finance</a></li>
          <li><a href="#">Clients</a></li>
        </ul>
      </div>
    {{/liquid-unless}}
  </div>
</div>

{{#liquid-with view.isActive use="quickJump" class="liquid-results"}}
  <div class="results">
    <div class="overlay"></div>

    <div class="content">
      <section>
        <h1>Colleagues</h1>

        <ul>
          <li><article>Imba colleague 1</article></li>
          <li><article>Imba colleague 2</article></li>
        </ul>
      </section>

      <section>
        <h1>Advisors</h1>

        <ul>
          <li><article>Pro advisor 1</article></li>
          <li><article>Pro advisor 2</article></li>
        </ul>
      </section>
    </div>
  </div>
{{/liquid-with}}
