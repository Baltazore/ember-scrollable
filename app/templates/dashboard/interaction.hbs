<header>
  <div class="time">
    <span class="from-now">{{ago scheduledCallTime}}</span>
    <span class="absolute">{{moment scheduledCallTime "h:mm a"}}</span>
  </div>

  <div class="content">
    <h1>
      <span>{{advisor.name}}</span>
      <small>{{project.name}}</small>
    </h1>

    <a target="_blank" {{bind-attr href=pistachioUrl}}>View interaction page</a>
  </div>
</header>

<section class="profiles">
  <ul>
    <li>{{as-profile person=advisor title="Advisor" class="advisor"}}</li>
    <li>{{as-profile person=clientContact title="Client" class="client"}}</li>
  </ul>
</section>

<section class="checklist-items">
  <header>
    {{as-checklist-status items=checklistItems}}

    <a target="_blank" {{bind-attr href=checklistUrl}}>Show checklist</a>
  </header>

  <ul>
    {{#each checklistItem in checklistItems itemController="dashboard.interaction.checklistItem"}}
      <li {{bind-attr class="checklistItem.completed"}}>{{checklistItem.description}}</li>
    {{/each}}
  </ul>
</section>
