{{#as-side-panel class="unused-advisor" close="hideSidePanel" previous="previous" next="next" actionReceiver=sidePanel}}
  {{#as-side-panel/main}}
    {{as-side-panel/header}}

    {{#as-side-panel/content}}
      <header>
        <div class="content">
          <h1>
            <span>{{model.project.name}}</span>
            <small>{{model.project.codename}}</small>
          </h1>

          <span>
            <span>Contacted</span>
            <span class="terms-sent-at">{{ago model.termsSentAt}}</span>
          </span>
        </div>
      </header>

      <section class="profile">
        {{as-profile
          person=model.advisor
          title="Unused Advisor"
          class="advisor"}}
      </section>

      {{#if features.advisorFollowUp}}
        {{#as-expandable-list title="Email Correspondence"}}
          {{as-email-correspondence emails=emails actionHandler=controller}}
        {{/as-expandable-list}}
      {{/if}}

      {{#as-expandable-list title="Project History"}}
        {{as-project-history projectHistory=projectHistory}}
      {{/as-expandable-list}}

    {{/as-side-panel/content}}

    {{#as-side-panel/footer}}
      {{#as-action-group}}
        {{#as-action
          action="remove"
          showConfirmation=true
          buttonClass="remove"
          confirmationStateClass="alert"
          confirmationButtonLabel="Yes, Remove Advisor"
          requestPromise=requestPromise}}
          Remove Advisor
        {{/as-action}}

        {{#if features.advisorFollowUp}}
          {{#as-action action="toggleFollowUp" requestPromise=requestPromise}}
            Follow Up
          {{/as-action}}
        {{/if}}
      {{/as-action-group}}
    {{/as-side-panel/footer}}
  {{/as-side-panel/main}}

  {{#as-side-panel/drawer}}
    {{#as-side-panel/content}}
      {{#if showFollowUp}}
        {{as-email-composer
          model=emailDelivery
          templates=emailTemplates
          variables=emailVariables
          actionReceiver=emailComposer}}
      {{/if}}

      {{#if showSelectedEmail}}
        {{as-email-viewer email=selectedEmail}}
      {{/if}}
    {{/as-side-panel/content}}
      {{#as-side-panel/footer}}
        {{#as-action-group}}
          {{#if showFollowUp}}
            {{#as-action action="send" requestPromise=requestPromise}}
              Send
            {{/as-action}}

            {{#as-action action="preview"}}Preview{{/as-action}}
          {{/if}}

          {{#as-action action="close" class="close"}}Close{{/as-action}}
        {{/as-action-group}}
      {{/as-side-panel/footer}}
  {{/as-side-panel/drawer}}
{{/as-side-panel}}
