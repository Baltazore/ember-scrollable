{{#as-progress-bar class="target" ratio=targetRatio}}
  {{tool-tipster class="tip" title=monthlyTargetTitle position="bottom"}}
{{/as-progress-bar}}

{{#unless isOnPace}}
  {{#as-progress-bar class="pace" ratio=paceRatio}}
    {{tool-tipster class="tip" title=onPaceCreditTargetTitle position="top"}}
  {{/as-progress-bar}}
{{/unless}}

{{#as-progress-bar class="current" ratio=progress}}
  {{tool-tipster class="tip" title=currentMonthCreditCountTitle position="left"}}
{{/as-progress-bar}}
