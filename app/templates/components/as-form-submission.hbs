{{#if formSubmitted}}
  {{as-spinner length=6 width=2 radius=6 color="#555555"}}
{{else}}
  {{#if submit}}
    <button type="submit">
      {{submitText}}
    </button>
  {{/if}}

  {{#if cancel}}
    <a {{action 'cancel' target='view.parentView.parentView'}}>
      {{cancelText}}
    </a>
  {{/if}}
{{/if}}
