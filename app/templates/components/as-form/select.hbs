{{#as-form/field
  form=form
  name=name
  errorProperty=errorProperty
  errorMessage=errorMessage
  disabled=disabled
  label=label
  class="form-select" as |value|}}
  {{#x-select name=name prompt=prompt value=value disabled=disabled}}
    {{#each item in content}}
      {{#x-option value=item.id}}{{item.name}}{{/x-option}}
    {{/each}}
  {{/x-select}}
{{/as-form/field}}
