{{#as-form/field
  form=form
  name=name
  placeholder=placeholder
  errorProperty=errorProperty
  errorMessage=errorMessage
  label=label
  disabled=disabled as |value|}}
  {{#if hasBlock}}
    {{yield value this}}
  {{else}}
    {{input type="text" name=name placeholder=placeholder value=value disabled=disabled}}
  {{/if}}
{{/as-form/field}}
