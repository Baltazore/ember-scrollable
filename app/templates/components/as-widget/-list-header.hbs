<section class="filters">
  {{#if hasTeamMemberFilter}}
    {{#rl-dropdown-container class="dropdown team-members"}}
      {{#rl-dropdown-toggle}}
        {{#if selectedTeamMember}}
          <span>{{selectedTeamMember.initials}}</span>
        {{else}}
          <span>Team Members</span>
        {{/if}}
        <i></i>
      {{/rl-dropdown-toggle}}

      {{#rl-dropdown tagName="ul" class="bottom" closeOnChildClick=true}}
        <li><a {{action "setTeamMember" null}}>All Team Members</a></li>
        {{#each teamMembers as |teamMember|}}
          <li>
            <a {{action "setTeamMember" teamMember}}>
              {{as-avatar person=teamMember}} <span>{{teamMember.name}} ({{teamMember.initials}})</span>
            </a>
          </li>
        {{/each}}
      {{/rl-dropdown}}
    {{/rl-dropdown-container}}
  {{/if}}
</section>
