<div class="select">
  <select onchange={{action "changeSelection" value="target.value"}}>
    <option value="">{{prompt}}</option>

    <optgroup label="Teams">
      {{#each teams as |team|}}
        <option value="team-{{team.id}}" selected={{eq teamId team.id}}>
          {{team.name}}
        </option>
      {{/each}}
    </optgroup>

    <optgroup label="Whiteboards">
      {{#each whiteboards as |whiteboard|}}
        <option value="whiteboard-{{whiteboard.id}}" selected={{eq whiteboardId whiteboard.id}}>
          {{whiteboard.name}}
        </option>
      {{/each}}
    </optgroup>
  </select>
</div>
