<table>
  {{#each projectHistory as |projectHistory|}}
    <tr {{action "openProject" projectHistory.project}}>
      <td class="project">
        <a href={{projectHistory.project.pistachioUrl}} target="_blank">
          <span class="name">{{projectHistory.project.name}}</span> -
          <span class="codename">{{as-text-ellipsis text=projectHistory.project.codename characterLimit=30}}</span>
        </a>
      </td>

      <td class="occurred-at">
        {{#if projectHistory.occurredAt}}
          {{#tool-tipster title=(moment projectHistory.occurredAt "D MMM YYYY")}}
            {{ago projectHistory.occurredAt}}
          {{/tool-tipster}}
        {{/if}}
      </td>

      <td class="outreach-status">
        {{#tool-tipster title=projectHistory.humanizedOutreachStatus}}
          <i class="{{projectHistory.outreachStatusClass}}"></i>
        {{/tool-tipster}}
      </td>

      <td class="primary-contact">{{as-avatar person=projectHistory.primaryContact position="left"}}</td>
    </tr>
  {{/each}}
</table>
