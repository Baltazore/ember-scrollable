{{#unless isDisplayingConfirmationOptions}}
  <div class="additional">
    <a {{action "toggleConfirmationDisplay"}}>Cancel Interaction</a>

    {{#link-to "dashboard.schedule-interaction" model.id}}
      Reschedule Interaction
    {{/link-to}}
  </div>

  <div class="primary">
    <a {{action "submit"}}>WIP: Complete Interaction</a>
  </div>

{{else}}
  <span>{{confirmationMessage}}</span>
  <a {{action "cancel" true}}>Yes, withdraw the interaction</a>
  <a {{action "cancel" false}}>No, thanks</a>
{{/unless}}
