{{page-numbers content=emails}}

<table>
  {{#each emails as |email|}}
    <tr {{action "viewEmail" email}} class={{if (eq selectedEmail.id email.id) "selected"}}>
      <td class="subject">
        {{as-text-ellipsis text=email.subject characterLimit=40}}
      </td>
      <td class="from">
        {{#if email.from.name}}
          {{email.from.name}}
        {{else}}
          {{email.from.address}}
        {{/if}}
      </td>
      <td class="sent-at">
        {{#tool-tipster title=(moment email.sentAt "D MMM YYYY")}}
          {{ago email.sentAt}}
        {{/tool-tipster}}
      </td>
    </tr>
  {{/each}}
</table>

{{page-numbers content=emails}}
