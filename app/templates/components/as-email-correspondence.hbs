<table>
  {{#each emails as |email|}}
    <tr {{action "selectEmail" email}}>
      <td class="subject">
        {{email.subject}}
      </td>
      <td class="sender">
        {{extract-name-from-email email.sender}}
      </td>
      <td class="sent-at">
        {{moment email.sentAt "D MMM YYYY"}} ({{ago email.sentAt}})
      </td>
    </tr>
  {{/each}}
</table>

{{page-numbers content=emails}}

{{#if isViewingEmail}}
  {{as-email-viewer email=selectedEmail}}
{{/if}}
