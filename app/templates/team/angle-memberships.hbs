<ul>
  {{#each}}
    <li>
      <article>
        {{as-avatar user=user}}
        {{super-number value=deliveryTarget}}
        <button class="remove"></button>
      </article>
    </li>
  {{/each}}
</ul>

{{#as-dropdown title="Add Member" class="add" align="bottom"}}
  {{#as-dropdown-item class="search"}}
    <i></i>
    {{input type="text" value=query click=view.onSearchClick}}
  {{/as-dropdown-item}}

  {{#each team.members}}
    {{#as-dropdown-item}}
      <a>
        {{as-avatar user=this}}
        {{name}} <small>({{initials}})</small>
      </a>
    {{/as-dropdown-item}}
  {{/each}}
{{/as-dropdown}}
