<div class="bar">
  {{#as-progress-indicator promise=requestPromise spinnerColor="#ffffff"}}
    <i></i>
  {{/as-progress-indicator}}

  {{input
    type="text"
    placeholder="Jump to advisors, client, projects and more..."
    value=query
    focus-in="onBarFocusIn"
    targetObject=view}}
</div>

<div class="actions">
  {{#liquid-if view.isActive use="crossFade" class="liquid-actions"}}
    <button class="close" title="Close" {{action "clear"}}></button>
  {{else}}
    <button class="change-app" title="Change App" data-dropdown="apps" data-options="align: left"></button>

    <ul id="add-actions" class="add-actions" data-dropdown-content>
      <li><a href="#">New advisor</a></li>
      <li><a href="#">New project</a></li>
    </ul>

    <button class="add" title="Add" data-dropdown="add-actions" data-options="align: left"></button>

    <ul id="apps" class="apps" data-dropdown-content>
      <li><a href="#">Metrics</a></li>
      <li><a href="#">Finance</a></li>
      <li><a href="#">Clients</a></li>
    </ul>
  {{/liquid-if}}
</div>

{{#liquid-if view.isActive use="crossFade" class="liquid-results"}}
  <div class="results">
    {{#liquid-if results use="crossFade" class="liquid-content"}}
      {{#each allSections}}
        <section>
          <h1>{{title}}</h1>

          <ul>
            {{#each result in results}}
              <li>
                {{render "quick-jump/result" result tagName="article"}}
              </li>
            {{/each}}
          </ul>
        </section>
      {{/each}}
    {{/liquid-if}}
  </div>
{{/liquid-if}}
