<ul>
  {{#each memberships itemController="teams.team.angle-membership"}}
    <li>
      <article>
        {{as-avatar user=user}}
        {{super-number value=deliveryTarget class="delivery-target"}}
        <button class="remove" tabindex="-1" {{action "remove" this bubbles=false}}></button>
      </article>
    </li>
  {{/each}}
</ul>

{{#rl-dropdown-container class="dropdown add"}}
  {{#rl-dropdown-toggle}}
    {{#as-progress-indicator promise=requestPromise spinnerColor="#f88838"}}
      <i></i>
    {{/as-progress-indicator}}
  {{/rl-dropdown-toggle}}

  {{#rl-dropdown tagName="ul" class="team-members" closeOnChildClick="article"}}
    <li class="search">
      {{#as-progress-indicator promise=requestPromise spinnerColor="#f88838"}}
        <i></i>
      {{/as-progress-indicator}}

      {{input type="text" value=query click=view.onSearchClick}}
    </li>

    <li>
      <ul>
        {{#each teamMembers}}
          <li {{action "add" this}}>
            <article>
              {{as-avatar user=this}}

              <div class="name">
                {{name}}
              </div>
            </article>
          </li>
        {{/each}}
      </ul>
    </li>
  {{/rl-dropdown}}
{{/rl-dropdown-container}}
