<header>
  <div class="sort-by-label">
    <label for="sort-by">Sort by:</label>
  </div>

  <div class="sort-by-select">
    {{view "select"
      id="sort-by"
      content=projects.availableSortProperties
      optionValuePath="content.id"
      optionLabelPath="content.name"
      value=sortPropertyId}}
  </div>
</header>

<ul>
  {{#each project in projects itemController="teams.team.project-list-item"}}
    <li>{{render "teams.team.project-list-item" project.model tagName="article"}}</li>
  {{/each}}
</ul>
