<header>
  <img src="assets/images/logo.png" alt="Phoenix"></img>
  <h1>AlphaSights</h1>
</header>

<nav>
  <header>
    <div class="toggle-collapse">
      <button {{action "toggleCollapse" target=view}}></button>
    </div>

    <h1>Menu</h1>
  </header>

  <ul>
    <li class="dashboard"><a href="/dashboard"><i></i><span>Dashboard</span></a></li>
    <li class="projects"><a href="/projects"><i></i><span>Projects</span></a></li>
    <li class="team"><a href="/team"><i></i><span>Team</span></a></li>
    <li class="performances"><a href="/performances"><i></i><span>Performances</span></a></li>
  </ul>
</nav>

<section class="user-session">
  <div class="toggle-actions">
    <button title="Actions" data-dropdown="session-actions" data-options="align: top"></button>

    <ul id="session-actions" class="actions" data-dropdown-content>
      <li><a href="#">Settings</a></li>
      <li><a href="#">Logout</a></li>
    </ul>
  </div>

  <img
    class="picture"
    alt="Profile Picture"
    {{bind-attr src=currentUser.avatarUrl title=currentUser.initials}}/>

  <div class="name">{{currentUser.name}}</div>
</section>
