<ul>
  {{#each model.memberships itemController="whiteboards.whiteboard.angle-membership" as |membership|}}
    <li>
      <article>
        {{as-avatar person=membership.model.user}}
        {{super-number value=membership.deliveryTarget class="delivery-target"}}
        <button class="remove" tabindex="-1" {{action "remove" membership.model bubbles=false}}></button>
      </article>
    </li>
  {{/each}}
</ul>

{{#rl-dropdown-container class="dropdown add"}}
  {{#rl-dropdown-toggle}}
      <i></i>
  {{/rl-dropdown-toggle}}

  {{#rl-dropdown tagName="ul" class="members" closeOnChildClick=true}}
    <li class="input">
      {{#as-progress-indicator promise=requestPromise spinnerColor="#f88838"}}
        <i></i>
      {{/as-progress-indicator}}

      {{input type="text" value=query click=view.onSearchClick}}
    </li>

    <li class="results">
      <ul>
        {{#each unusedMembers as |member|}}
          <li {{action "add" member}}>
            <article>
              {{as-avatar person=member}}

              <div class="name">
                {{member.name}}
              </div>
            </article>
          </li>
        {{/each}}
      </ul>
    </li>
  {{/rl-dropdown}}
{{/rl-dropdown-container}}
