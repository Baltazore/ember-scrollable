<ul>
  {{#each memberships as |membership|}}
    <li>
      {{as-angle-membership membership=membership}}
    </li>
  {{/each}}
</ul>

{{#rl-dropdown-container class="dropdown add"}}
  {{#rl-dropdown-toggle}}
      <i></i>
  {{/rl-dropdown-toggle}}

  {{#rl-dropdown tagName="ul" class="members" closeOnChildClick=true}}
    <li class="input">
      {{#as-progress-indicator promise=requestPromise spinnerColor="#f88838"}}
        <i></i>
      {{/as-progress-indicator}}

      {{input type="text" value=query click=view.onSearchClick}}
    </li>

    <li class="results">
      <ul>
        {{#each unusedMembers as |member|}}
          <li {{action "add" member}}>
            <article>
              {{as-avatar person=member}}

              <div class="name">
                {{member.name}}
              </div>
            </article>
          </li>
        {{/each}}
      </ul>
    </li>
  {{/rl-dropdown}}
{{/rl-dropdown-container}}
