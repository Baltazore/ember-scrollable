<div class="priority">
  {{#as-dropdown
    title="Change Priority"
    align="right"
    classNameBindings=":change-priority :priority status"}}
    {{#as-dropdown-item class="low" action="setPriority" param="low"}}
      <button></button>
    {{/as-dropdown-item}}

    {{#as-dropdown-item class="medium" action="setPriority" param="medium"}}
      <button></button>
    {{/as-dropdown-item}}

    {{#as-dropdown-item class="high" action="setPriority" param="high"}}
      <button></button>
    {{/as-dropdown-item}}
  {{/as-dropdown}}
</div>

<div class="details">
  <h1>
    <span>{{name}}</span>
    <small>{{clientCode}}</small>
  </h1>
</div>

<div class="members">
  {{render "avatar" analyst_1 class="lead"}}

  {{#each members}}
    {{render "avatar" this}}
  {{/each}}
</div>

<div class="progress">
  {{as-progress-bar ratio=progress}}

  <div class="details">
    <div class="proposed">
      <span class="count">
        {{proposedAdvisorsCount}}
      </span>

      <span class="label">proposed</span>
    </div>

    <div class="target">
      <span class="count">
        {{totalTarget}}
      </span>

      <span class="label">target</span>
    </div>
  </div>
</div>
